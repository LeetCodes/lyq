{
   "name": "Lyq",
   "version": "1.6",
   "default_locale": "en",
   "background_page": "background.html",
   "options_page": "options.html",
   "browser_action": {
   	"default_icon": "img/lyq-icon-close.png",
	"default_title": "Lyq"
	},
   "content_scripts": [ {
      "js": [ "pagecheck.js" ],
      "matches": [ "http://*.google.com/*", "http://*.google.co.jp/*", "http://www.youtube.com/*", "http://www.nicovideo.jp/*", "http://www.bing.com/*", "http://twitter.com/*", "https://twitter.com/*" ]
   }, {
      "js": [ "twitter_oauthpin.js" ],
      "matches": [ "http://twitter.com/oauth/authorize", "https://twitter.com/oauth/authorize" ]
   }],
   "description": "Lyq (Leak Your Query, pronounced as leak) is a micro \"unintentional\" blogging tool that tweets what you've searched automatically.",
   "permissions": [ "tabs", "http://twitter.com/", "https://twitter.com/", "http://api.bit.ly/" ],
   "icons": {
   		"32": "img/lyq-icon-32x32.png",
   		"48": "img/lyq-icon-48x48.png"
	},
	"minimum_chrome_version": "4.0.249"
}
